#!/bin/bash

URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT="data.json"
ERROR_FILE="errors.txt"

# Make the API request
response=$(curl -s -w "%{http_code}" -o "$OUTPUT" "$URL")
http_code=$response

# Check if request was successful (200 OK)
if [ "$http_code" -eq 200 ]; then
    echo "Successfully fetched data for Pikachu!"
else
    echo "Request failed with status: $http_code" | tee -a "$ERROR_FILE"
fi
